
<form action="/criar-conta" method="post">
    <div class="mt-3 home-login-div">

        <h2 class="text-center">Quero uma conta!</h2>

        <div class="d-flex flex-column px-2 mt-1">
            <label for="nomeUsuario"><b>Nome completo</b></label>
            <input type="text" name="nome" id="input-nome" class="px-2 py-1 home-login-input" placeholder="Ex: Monteiro Lobato" autofocus autocomplete="off" value="{{usuario.nome}}">
            <span class="erro-validacao">{{erros.nome}}</span>
        </div>

        <div class="d-flex flex-column px-2 mt-1">
            <label for="nomeUsuario"><b>Nome de usuário</b></label>
            <input type="text" name="usuario" id="input-nomeUsuario" class="px-2 py-1 home-login-input" placeholder="Somente letras e/ou numeros" autofocus autocomplete="off" value="{{usuario.usuario}}">
            <span class="erro-validacao">{{erros.usuario}}</span>
        </div>

        <div class="d-flex flex-column px-2 mt-1">
            <label for="email"><b>E-mail</b></label>
            <input type="email" name="email" id="input-email" class="px-2 py-1 home-login-input" placeholder="Ex: monteiro@seuemail.com"autofocus autocomplete="off" value="{{usuario.email}}">
            <span class="erro-validacao">{{erros.email}}</span>
        </div>

        <div class="d-flex flex-column px-2 mt-1">
            <label for="senha"><b>Senha</b></label>
            <input type="password" name="senha" id="input-senha" class="px-2 py-1 home-login-input" placeholder="Somente letras e/ou números" autocomplete="off" value="{{usuario.senha}}">
            <span class="erro-validacao">{{erros.senha}}</span>
        </div>

        <div class="container-fluid px-2 mt-1">
            <div class="row px-1">
                <div class="col px-2 mt-2">
                    <input type="button" id="input-cancelar" class="py-1 home-login-btn" value="Voltar" onclick="location.href='/'" style="width: 100%">
                </div>
                <div class="col px-2 mt-2">
                    <input type="submit" id="input-submit" class="py-1 home-login-btn" value="Criar" style="width: 100%">
                </div>
            </div>
        </div>
        
    </div>
</form>


