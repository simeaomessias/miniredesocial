<form action="/usuario/ativar-conta" method="post">

    <div class="mt-3 home-login-div">

        <h2 class="text-center">Ative sua conta!</h2>
        <p class="text-center mb-0" style="color: blue">Um código de ativação foi enviado para</p>
        <p class="text-center" style="color: blue">{{email}}</p>

        <div class="d-flex flex-column px-2 mt-0">
            <label for="email"><b>Nome de usuário</b></label>
            <input type="text" name="usuario" id="input-codigo" class="px-2 py-1 home-login-input" autocomplete="off" readonly value="{{usuario}}">
        </div>

        <div class="d-flex flex-column px-2 mt-2">
            <label for="email"><b>Código de ativação</b></label>
            <input type="text" name="codigo" id="input-codigo" class="px-2 py-1 home-login-input" placeholder="Ex: 273196" autofocus autocomplete="off" value="{{codigo}}">
            <span class="erro-validacao">{{erro}}</span>
        </div>

        <div class="container-fluid px-2 mt-1">
            <div class="row px-1">
                <div class="col px-2 mt-2">
                    <input type="button" id="input-cancelar" class="py-1 home-login-btn" value="Voltar" onclick="location.href='/'" style="width: 100%">
                </div>
                <div class="col px-2 mt-2">
                    <input type="submit" id="input-ativar" class="py-1 home-login-btn" value="Ativar" style="width: 100%">
                </div>
            </div>
        </div>
        
    </div>

</form>

